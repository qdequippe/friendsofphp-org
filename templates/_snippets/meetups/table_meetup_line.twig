{# @var meetup \Fop\Meetup\ValueObject\Meetup #}
<tr class="meetup" data-longitude="{{ meetup.longitude }}" data-latitude="{{ meetup.latitude}}" data-datetime="{{ meetup.localDate }} {{ meetup.localTime }}">
    <td class="w-25">
        <span class="text-nowrap text-{% if meetup.startInDays < 7 %}success{% elseif meetup.startInDays < 14 %}warning{% else %}danger{% endif %}">
            {{ meetup.utcStartDateTime|date("D") }},
            <strong>{{ meetup.utcStartDateTime|date("M d") }}</strong>
        </span>

        <br>

        <small class="text-secondary">{{ meetup.localTime }}</small>
    </td>
    <td class="w-25">
        <a href="#" onclick="relocate({{ meetup.latitude }}, {{ meetup.longitude }})">
            {{ meetup.city }}
        </a>

        <br>

        <small class="text-secondary">{{ meetup.country }}</small>
    </td>
